import QtQuick 2.15
import QtQuick.Controls.Basic

Row {
    id: control
    height: 30
    property var myText

    Text {
        id: cpuText
        text: control.myText
        color: "black"
        anchors.verticalCenter: parent.verticalCenter
        anchors.left: parent.left
        anchors.leftMargin: 0
        font.pointSize: 9
    }
    ProgressBar {
        id: progressBarCPU
        width: 100
        height: 6
        value: /*phoenixController.cpuInfo/100*/0.6
        anchors.verticalCenter: parent.verticalCenter
        anchors.left: cpuText.right
        anchors.leftMargin: 5
        background: Rectangle {
            color: "#c0c0c0"
            implicitHeight: 6
            radius: 2
            border.color: "#c0c0c0"
            border.width: 2
        }

        contentItem: Item {
            implicitHeight: 6
            Rectangle {
                width: progressBarCPU.visualPosition * parent.width
                height: 6
                radius: 2
                color: "#047eff"
                border.color: "#047eff"
                border.width: 2
            }
        }
    }
    Text {
        id: progressBarTextCPU
        text: "% 60" /*+ phoenixController.cpuInfo*/
        color: "black"
        anchors.verticalCenter: parent.verticalCenter
        anchors.left: progressBarCPU.right
        anchors.leftMargin: 5
        font.pixelSize: 9
        horizontalAlignment: Text.AlignHCenter
        verticalAlignment: Text.AlignVCenter
    }
}